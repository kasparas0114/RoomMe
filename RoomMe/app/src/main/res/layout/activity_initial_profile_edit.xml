<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.trocket.roomme.InitialProfileEdit">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Age:"
        android:id="@+id/aipe_age"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/aipe_edit_age" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="2"
        android:id="@+id/aipe_edit_age"
        android:clickable="false"
        android:editable="true"
        android:enabled="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/aipe_age"
        android:layout_toEndOf="@+id/aipe_age" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number:"
        android:id="@+id/aipe_phone_number"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_above="@+id/aipe_status"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/aipe_edit_phone"
        android:clickable="false"
        android:editable="true"
        android:enabled="true"
        android:hint="(XXX)-XXX-XXXX"
        android:layout_below="@+id/aipe_edit_age"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status:"
        android:id="@+id/aipe_status"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/aipe_edit_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/aipe_edit_status"
        android:layout_below="@+id/aipe_status"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aipe_submit"
        android:layout_below="@+id/aipe_edit_status"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        />

</RelativeLayout>
