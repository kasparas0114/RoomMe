<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trocket.roomme.ProfileEditFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#A8A8A8"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phone Number:"
                android:id="@+id/fpe_phone_number"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignBottom="@+id/fpe_edit_phone"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email:"
                android:id="@+id/fpe_email"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/fpe_phone_number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="39dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/fpe_edit_phone"
                android:clickable="false"
                android:editable="true"
                android:enabled="true"
                android:hint="(XXX)-XXX-XXXX"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/fpe_edit_email"
                android:editable="true"
                android:enabled="true"
                android:hint="derp@herp.com"
                android:paddingLeft="10sp"
                android:layout_above="@+id/fpe_status"
                android:layout_alignRight="@+id/fpe_edit_phone"
                android:layout_alignEnd="@+id/fpe_edit_phone"
                android:layout_toRightOf="@+id/fpe_email"
                android:layout_toEndOf="@+id/fpe_email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Status:"
                android:id="@+id/fpe_status"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/fpe_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fpe_edit_status"
                android:layout_below="@+id/fpe_status"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Ideal Location:"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/fpe_location"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/fpe_edit_status"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fpe_edit_location"
                android:layout_below="@+id/fpe_location"
                android:layout_marginTop="10dp"
                android:editable="true"
                android:maxLines="5"
                android:inputType="textMultiLine"
                android:layout_centerHorizontal="true"
                android:hint="I.e. Olathe"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Career: "
                android:id="@+id/fpe_career"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/fpe_edit_location"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fpe_edit_career"
                android:layout_below="@+id/fpe_career"
                android:layout_marginTop="10dp"
                android:editable="true"
                android:maxLines="5"
                android:inputType="textMultiLine"
                android:layout_centerHorizontal="true"
                android:hint="I.e. DJ Master"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Bio:"
                android:id="@+id/fpe_bio"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/fpe_edit_career"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fpe_edit_bio"
                android:layout_below="@+id/fpe_bio"
                android:layout_marginTop="10dp"
                android:editable="true"
                android:inputType="textMultiLine"
                android:layout_centerHorizontal="true"
                android:hint="I.e. I'm in love with the cocoa. "/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fpe_submit"
                android:text="Update Profile"
                android:layout_below="@+id/fpe_edit_bio"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </ScrollView>



</FrameLayout>
