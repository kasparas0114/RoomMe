<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trocket.roomme.ProfileEditFragment">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
       >
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:id="@+id/fpe_header"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="30dp" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Age:"
            android:id="@+id/fpe_age"
            android:layout_below="@+id/fpe_header"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="37dp" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Phone Number:"
            android:id="@+id/fpe_phone_number"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/fpe_age"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Email:"
            android:id="@+id/fpe_email"
            android:layout_below="@+id/fpe_phone_number"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="39dp" />
    
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/fpe_edit_phone"
            android:clickable="false"
            android:editable="true"
            android:enabled="true"
            android:hint="(XXX)-XXX-XXXX"
            android:layout_above="@+id/fpe_email"
            android:layout_alignLeft="@+id/fpe_status"
            android:layout_alignStart="@+id/fpe_status"
            android:layout_below="@+id/fpe_edit_age" />
    
        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/fpe_edit_age"
            android:hint="1"
            android:editable="true"
            android:enabled="true"
            android:layout_alignTop="@+id/fpe_age"
            android:layout_toRightOf="@+id/fpe_age"
            android:layout_toEndOf="@+id/fpe_header"
            android:layout_marginLeft="50dp"
            android:layout_alignBaseline="@+id/fpe_age"
            android:layout_marginStart="0dp"/>
    
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/fpe_edit_email"
            android:editable="true"
            android:enabled="true"
            android:hint="derp@herp.com"
            android:paddingStart="80dp"
            android:layout_alignTop="@+id/fpe_email"
            android:layout_alignRight="@+id/fpe_edit_phone"
            android:layout_alignEnd="@+id/fpe_edit_phone"
            android:layout_alignLeft="@+id/fpe_edit_age"
            android:layout_alignStart="@+id/fpe_edit_age" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status:"
            android:id="@+id/fpe_status"
            android:layout_below="@+id/fpe_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
    
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/fpe_edit_status"
            android:layout_below="@+id/fpe_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:editable="true"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:hint="Have 63 cats, will travel"
            android:textAlignment="center"
            android:paddingStart="50dp" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ideal Location:"
            android:id="@+id/fpe_location"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/fpe_edit_status"
            android:layout_centerHorizontal="true" />
    
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/fpe_edit_locaiton"
            android:layout_below="@+id/fpe_location"
            android:layout_marginTop="10dp"
            android:editable="true"
            android:maxLines="5"
            android:inputType="textMultiLine"
            android:layout_centerHorizontal="true"
            android:hint="I.e. Olathe"
            android:paddingStart="100dp" />
    
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:id="@+id/fpe_save"
            android:layout_below="@+id/fpe_header"
            android:layout_centerHorizontal="true" />
    
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/accountStatusSpinner"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="false"
            android:focusableInTouchMode="false"
            android:paddingStart="110dp"
            android:textAlignment="center"
            android:spinnerMode="dialog" />

    </RelativeLayout>

</FrameLayout>
